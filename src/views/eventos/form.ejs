<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= titulo %> - Plataforma de Eventos</title>
    <link rel="stylesheet" href="/public/css/style.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body>
    <nav class="navbar">
        <div class="nav-container">
            <h1 class="nav-logo">
                <a href="/eventos">
                    <i class="fas fa-calendar-alt"></i>
                    Plataforma de Eventos
                </a>
            </h1>
            <ul class="nav-menu">
                <li class="nav-item"><a href="/eventos" class="nav-link active"><i class="fas fa-calendar"></i>Eventos</a></li>
                <li class="nav-item"><a href="/usuarios" class="nav-link"><i class="fas fa-users"></i>Usuários</a></li>
                <li class="nav-item"><a href="/inscricoes" class="nav-link"><i class="fas fa-clipboard-list"></i>Inscrições</a></li>
            </ul>
        </div>
    </nav>

    <main class="main-content">
        <div class="container">
            <div class="page-header">
                <a href="/eventos" class="back-link"><i class="fas fa-arrow-left"></i>Voltar</a>
                <h1><%= titulo %></h1>
            </div>
            <form id="eventForm" class="form">
                <div class="form-group">
                    <label for="titulo">Título do Evento *</label>
                    <input type="text" id="titulo" name="titulo" required maxlength="255" />
                </div>
                <div class="form-group">
                    <label for="data">Data e Hora *</label>
                    <input type="datetime-local" id="data" name="data" required />
                </div>
                <div class="form-group">
                    <label for="local">Local *</label>
                    <input type="text" id="local" name="local" required maxlength="255" />
                </div>
                <div class="form-group">
                    <label for="descricao">Descrição *</label>
                    <textarea id="descricao" name="descricao" required rows="4" maxlength="1000"></textarea>
                </div>
                <div class="form-group">
                    <label for="user_id">Organizador *</label>
                    <select id="user_id" name="user_id" required>
                        <option value="">Selecione um organizador</option>

                    </select>
                </div>
                <div class="form-actions">
                    <a href="/eventos" class="btn btn-secondary"><i class="fas fa-times"></i>Cancelar</a>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i>
                        <%= method === 'POST' ? 'Criar Evento' : 'Salvar Alterações' %>
                    </button>
                </div>
            </form>
        </div>
    </main>

    <div id="loading" class="loading hidden">
        <div class="spinner"></div>
        <p>Salvando...</p>
    </div>
    <div id="toast" class="toast hidden">
        <span id="toast-message"></span>
        <button id="toast-close">&times;</button>
    </div>
    <script>
        const formData = {
            action: '<%= action %>',
            method: '<%= method %>',
            evento: '<%- evento ? JSON.stringify(evento) : null %>',
        };
    </script>
    <script src="/public/js/evento-form.js"></script>
</body>
</html>