<!DOCTYPE html>
<html lang="pt-BR">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Inscrições Realizadas</title>
    <link rel="stylesheet" href="/public/css/style.css" />
  </head>
  <body>
    <main class="main-content">
      <div class="container" style="max-width: 600px; margin: 2rem auto">
        <h1>Inscrições Realizadas</h1>
        <a href="/usuarios/novo" class="btn btn-primary" style="margin-bottom: 1rem;">Cadastrar Novo Usuário</a>
        <% if (Array.isArray(inscricoes) && inscricoes.length > 0) { %>
        <table class="table">
          <tr>
            <th>Nome</th>
            <th>Idade</th>
            <th>Evento</th>
            <th>Ações</th>
          </tr>
          <% inscricoes.forEach(function(usuario) { %>
          <tr>
            <td><%= usuario.nome %></td>
            <td><%= usuario.idade %></td>
            <td><%= usuario.evento %></td>
            <td>
              <a href="/usuarios/<%= usuario.id %>/edit" class="btn btn-secondary">Editar</a>
              <form action="/usuarios/<%= usuario.id %>?_method=DELETE" method="POST" style="display:inline;">
                <button type="submit" class="btn btn-danger" onclick="return confirm('Tem certeza que deseja apagar esta inscrição?');">Excluir</button>
              </form>
            </td>
          </tr>
          <% }) %>
        </table>
        <% } else { %>
        <p>Nenhuma inscrição encontrada.</p>
        <% } %>
      </div>
    </main>
  </body>
</html>