<!DOCTYPE html>
<html lang="pt-BR">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Inscrições Realizadas</title>
    <style>
      body {
        background: linear-gradient(120deg, #e0e7ff 0%, #f7f9fb 100%);
        font-family: "Segoe UI", Arial, sans-serif;
        color: #222;
        margin: 0;
        padding: 0;
        min-height: 100vh;
      }
      .main-content {
        min-height: 100vh;
        display: flex;
        align-items: flex-start;
        justify-content: center;
        padding-top: 40px;
      }
      .container {
        background: #fff;
        border-radius: 18px;
        box-shadow: 0 6px 32px rgba(44, 62, 80, 0.13);
        padding: 2.5rem 2.5rem 2rem 2.5rem;
        width: 100%;
        max-width: 700px;
        margin: 2rem auto;
        border: 1.5px solid #e0e7ff;
        transition: box-shadow 0.2s;
      }
      .container:hover {
        box-shadow: 0 10px 40px rgba(44, 62, 80, 0.18);
      }
      h1 {
        font-size: 2.1rem;
        margin-bottom: 1.7rem;
        color: #2d6cdf;
        text-align: center;
        font-weight: 700;
        letter-spacing: 1px;
      }
      .btn {
        padding: 0.7rem 1.5rem;
        border: none;
        border-radius: 7px;
        font-size: 1.05rem;
        cursor: pointer;
        font-weight: 600;
        transition: background 0.2s, color 0.2s, box-shadow 0.2s;
        text-decoration: none;
        display: inline-block;
        box-shadow: 0 2px 8px rgba(44, 62, 80, 0.07);
      }
      .btn-primary {
        background: #2d6cdf;
        color: #fff;
        letter-spacing: 0.5px;
      }
      .btn-primary:hover {
        background: #1b4fa0;
        box-shadow: 0 4px 16px rgba(44, 62, 80, 0.13);
      }
      .btn-secondary {
        background: #e5e7eb;
        color: #222;
      }
      .btn-secondary:hover {
        background: #cbd5e1;
      }
      .btn-danger {
        background: #e74c3c;
        color: #fff;
      }
      .btn-danger:hover {
        background: #c0392b;
      }
      .table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 1rem;
        background: #fff;
        border-radius: 8px;
        overflow: hidden;
        box-shadow: 0 2px 8px rgba(44, 62, 80, 0.07);
      }
      .table th,
      .table td {
        padding: 0.8rem 0.7rem;
        text-align: left;
      }
      .table th {
        background: #f1f5f9;
        color: #2d6cdf;
        font-weight: 600;
        border-bottom: 2px solid #e5e7eb;
      }
      .table tr:nth-child(even) {
        background: #f9fafb;
      }
      .table tr:hover {
        background: #e8f0fe;
      }
      @media (max-width: 800px) {
        .container {
          padding: 1rem;
          max-width: 98vw;
        }
        .table th,
        .table td {
          padding: 0.5rem;
        }
        h1 {
          font-size: 1.3rem;
        }
        .btn {
          font-size: 0.95rem;
          padding: 0.6rem 1rem;
        }
      }
    </style>
  </head>
  <body>
    <main class="main-content">
      <div class="container" style="max-width: 600px; margin: 2rem auto">
        <h1>Inscrições Realizadas</h1>
        <a
          href="/usuarios/novo"
          class="btn btn-primary"
          style="margin-bottom: 1rem"
          >Cadastrar Nova Inscrição</a
        >
        <% if (Array.isArray(inscricoes) && inscricoes.length > 0) { %>
        <table class="table" id="tabela-inscricoes">
          <tr>
            <th>Nome</th>
            <th>Email</th>
            <th>Evento</th>
            <th>Data</th>
            <th>Local</th>
            <th>Ações</th>
          </tr>
          <% inscricoes.forEach(function(inscricao) { %>
          <tr data-id="<%= inscricao.id %>">
            <td><%= inscricao.user_nome %></td>
            <td><%= inscricao.user_email %></td>
            <td><%= inscricao.event_titulo %></td>
            <td>
              <%= inscricao.event_data ? new
              Date(inscricao.event_data).toLocaleString('pt-BR') : '' %>
            </td>
            <td><%= inscricao.event_local %></td>
            <td>
              <a
                href="/usuarios/<%= inscricao.id %>/edit"
                class="btn btn-secondary"
                >Editar</a
              >
              <button
                type="button"
                class="btn btn-danger"
                onclick="excluirInscricao('<%= inscricao.id %>', this)"
              >
                Excluir
              </button>
            </td>
          </tr>
          <% }) %>
        </table>
        <% } else { %>
        <p>Nenhuma inscrição encontrada.</p>
        <% } %>
      </div>
    </main>
    <script>
      async function excluirInscricao(id, btn) {
        if (!confirm("Tem certeza que deseja apagar esta inscrição?")) return;
        try {
          const res = await fetch(`/api/subscriptions/${id}`, {
            method: "DELETE",
          });
          if (res.ok) {
            // Remove a linha da tabela sem recarregar a página
            const row = btn.closest("tr");
            row.parentNode.removeChild(row);
          } else {
            const data = await res.json();
            alert(data.error || "Erro ao excluir inscrição");
          }
        } catch (err) {
          alert("Erro ao excluir inscrição");
        }
      }
    </script>
  </body>
</html>
