<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Lista de Inscrições - Plataforma de Eventos</title>
  <link rel="stylesheet" href="/public/css/style.css" />
</head>
<body>
  <main class="main-content">
    <div class="container" style="max-width: 700px; margin: 2rem auto;">
      <h1>Lista de Inscrições</h1>
      <table class="data-table">
        <thead>
          <tr>
            <th>Nome</th>
            <th>Email</th>
            <th>Idade</th>
            <th>Eventos Escolhidos</th>
          </tr>
        </thead>
        <tbody>
          <% if (inscricoes && inscricoes.length > 0) { %>
            <% inscricoes.forEach(inscricao => { %>
              <tr>
                <td><%= inscricao.nome %></td>
                <td><%= inscricao.email %></td>
                <td><%= inscricao.idade %></td>
                <td>
                  <%= inscricao.eventos ? inscricao.eventos.join(', ') : '' %>
                </td>
              </tr>
            <% }) %>
          <% } else { %>
            <tr>
              <td colspan="4" style="text-align:center;">Nenhuma inscrição encontrada.</td>
            </tr>
          <% } %>
        </tbody>
      </table>
      <div style="margin-top:2rem;">
        <a href="/" class="btn btn-primary">Voltar ao início</a>
      </div>
    </div>
  </main>
</body>
</html>