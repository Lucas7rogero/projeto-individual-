<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= titulo %> - Plataforma de Eventos</title>
    <link rel="stylesheet" href="/public/css/style.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body>
    <nav class="navbar">
        <div class="nav-container">
            <h1 class="nav-logo">
                <a href="/eventos">
                    <i class="fas fa-calendar-alt"></i>
                    Plataforma de Eventos
                </a>
            </h1>
            <ul class="nav-menu">
                <li class="nav-item"><a href="/eventos" class="nav-link"><i class="fas fa-calendar"></i>Eventos</a></li>
                <li class="nav-item"><a href="/usuarios" class="nav-link active"><i class="fas fa-users"></i>Usuários</a></li>
                <li class="nav-item"><a href="/inscricoes" class="nav-link"><i class="fas fa-clipboard-list"></i>Inscrições</a></li>
            </ul>
        </div>
    </nav>

    <main class="main-content">
        <div class="container">
            <div class="page-header">
                <a href="/usuarios" class="back-link"><i class="fas fa-arrow-left"></i>Voltar</a>
                <h1><%= titulo %></h1>
            </div>
            <form id="userForm" class="form">
                <div class="form-group">
                    <label for="nome">Nome *</label>
                    <input type="text" id="nome" name="nome" required maxlength="255" />
                </div>
                <div class="form-group">
                    <label for="email">Email *</label>
                    <input type="email" id="email" name="email" required maxlength="255" />
                </div>
                <div class="form-group">
                    <label for="senha">Senha *</label>
                    <input type="password" id="senha" name="senha" minlength="6" <%= method === 'POST' ? 'required' : '' %> />
                </div>
                <div class="form-actions">
                    <a href="/usuarios" class="btn btn-secondary"><i class="fas fa-times"></i>Cancelar</a>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i>
                        <%= method === 'POST' ? 'Criar Usuário' : 'Salvar Alterações' %>
                    </button>
                </div>
            </form>
        </div>
    </main>

    <div id="loading" class="loading hidden">
        <div class="spinner"></div>
        <p>Salvando...</p>
    </div>
    <div id="toast" class="toast hidden">
        <span id="toast-message"></span>
        <button id="toast-close">&times;</button>
    </div>
    <script>
        const formData = {
            action: '<%= action %>',
            method: '<%= method %>',
            usuario: '<%- usuario ? JSON.stringify(usuario) : null %>',
        };
    </script>
    <script src="/public/js/usuario-form.js"></script>
</body>
</html>